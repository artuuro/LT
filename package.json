{
  "name": "boilerplate",
  "version": "0.0.7",
  "description": "Fastify, Mongo, React",
  "type": "module",
  "main": "index.mjs",
  "scripts": {
    "dev:server": "set NODE_ENV=development && nodemon --es-module-specifier-resolution=node --experimental-modules --no-warnings --inspect ./api",
    "dev:client": "set NODE_ENV=development && nodemon --es-module-specifier-resolution=node --experimental-modules --no-warnings ./client",
    "prod:server": "set NODE_ENV=production && node --es-module-specifier-resolution=node --experimental-modules --no-warnings ./api",
    "prod:client": "yarn build && set NODE_ENV=production && node --es-module-specifier-resolution=node --experimental-modules --no-warnings ./client",
    "build": "next build app"
  },
  "author": "Arthur G.",
  "license": "UNLICENSED",
  "dependencies": {
    "fastify": "^2.3.0",
    "fastify-helmet": "^3.0.0",
    "fastify-mongoose": "^0.2.1",
    "fastify-nextjs": "^4.1.0",
    "fastify-static": "^2.4.0",
    "fastify-swagger": "^2.3.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.3",
    "next": "^8.1.0",
    "next-redux-saga": "^4.0.2",
    "next-redux-wrapper": "^3.0.0-alpha.2"
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "certification/*",
      "pages/*",
      "app-build/*"
    ]
  },
  "devDependencies": {
    "es6-promise": "^4.2.6",
    "@material-ui/core": "^4.0.0-beta.2",
    "@material-ui/icons": "^4.0.0-beta.0",
    "isomorphic-unfetch": "^3.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga": "^1.0.2"
  }
}
